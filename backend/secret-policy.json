{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "ReadMetroSecrets",
      "Effect": "Allow",
      "Action": ["secretsmanager:GetSecretValue"],
      "Resource": "arn:aws:secretsmanager:ap-southeast-1:*:secret:metro/dev/*"
    },
    {
      "Sid": "ReadRouteBucket",
      "Effect": "Allow",
      "Action": ["s3:GetObject"],
      "Resource": "arn:aws:s3:::metro-route-data-*-dev/*"
    },
    {
      "Sid": "KmsDecryptIfNeeded",
      "Effect": "Allow",
      "Action": ["kms:Decrypt"],
      "Resource": "*"
    }
  ]
}
